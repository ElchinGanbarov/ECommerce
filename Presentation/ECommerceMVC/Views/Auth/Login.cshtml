@model ECommerce.Application.Features.Commands.AppUser.LoginUser.LoginUserCommandRequest
@using ECommerceMVC.Resources
@using Localization
@using Microsoft.Extensions.Localization
@inject IHtmlLocalizer<Translations> Localizer

@{
    ViewData["Title"] = Localizer["Auth.SignIn"];
}

<link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true" />

<div class="login-container">
    <div class="login-wrapper">
        <div class="login-card">
            <div class="login-header">
                <h2>@Localizer["Auth.WelcomeBack"]</h2>
                <p>@Localizer["Auth.SignInToContinue"]</p>
            </div>
            
            <form class="login-form" method="post" id="login-form" asp-action="Login">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label asp-for="UsernameOrEmail" class="form-label">
                        <i class="fas fa-user"></i> @Localizer["Auth.EmailOrUsername"]
                    </label>
                    <input asp-for="UsernameOrEmail" class="form-control" required placeholder="@Localizer["Auth.EnterEmailOrUsername"]" autocomplete="username">
                    <span class="validation-error" asp-validation-for="UsernameOrEmail"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> @Localizer["Auth.Password"]
                    </label>
                    <div class="password-input-group">
                        <input asp-for="Password" type="password" class="form-control" required placeholder="@Localizer["Auth.EnterPassword"]" autocomplete="current-password">
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="validation-error" asp-validation-for="Password"></span>
                </div>
                
                <div class="form-options">
                    <label class="checkbox-container remember-me">
                        <input asp-for="RememberMe" type="checkbox">
                        <span class="checkmark"></span>
                        @Localizer["Auth.RememberMe"]
                    </label>
                    <a href="#" class="forgot-password" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                        @Localizer["Auth.ForgotPassword"]
                    </a>
                </div>
                
                <button type="submit" class="btn btn-primary btn-login">
                    <i class="fas fa-sign-in-alt"></i> @Localizer["Auth.SignIn"]
                </button>
                
                <div class="divider">
                    <span>@Localizer["Auth.Or"]</span>
                </div>
                
                <div class="social-login">
                    <a class="btn btn-google" asp-action="ExternalLogin" asp-route-provider="Google">
                        <i class="fab fa-google"></i> @Localizer["Auth.ContinueWithGoogle"]
                    </a>
                </div>
                
                <div class="register-link">
                    <p>@Localizer["Auth.DontHaveAccount"] <a asp-action="Register" class="link-primary">@Localizer["Auth.CreateOneNow"]</a></p>
                </div>
            </form>
        </div>
        
        <div class="login-illustration">
            <div class="illustration-content">
                <h3>@Localizer["Auth.WelcomeToStore"]</h3>
                <p>@Localizer["Auth.DiscoverAmazingProducts"]</p>
                <div class="features">
                    <div class="feature">
                        <i class="fas fa-shipping-fast"></i>
                        <span>@Localizer["Auth.FastDelivery"]</span>
                    </div>
                    <div class="feature">
                        <i class="fas fa-shield-alt"></i>
                        <span>@Localizer["Auth.SecureShopping"]</span>
                    </div>
                    <div class="feature">
                        <i class="fas fa-headset"></i>
                        <span>@Localizer["Auth.Support247"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="forgotPasswordModalLabel">
                    <i class="fas fa-key"></i> @Localizer["Auth.ResetPassword"]
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Localizer["Auth.EnterEmailForReset"]</p>
                <div class="form-group">
                    <label for="resetEmail" class="form-label">@Localizer["Auth.EmailAddress"]</label>
                    <input type="email" id="resetEmail" class="form-control" placeholder="@Localizer["Auth.EnterEmailAddress"]" required>
                    <span class="validation-error" id="resetEmailError"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Auth.Cancel"]</button>
                <button type="button" class="btn btn-primary" id="sendResetEmail">@Localizer["Auth.SendResetLink"]</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth-scripts.js" asp-append-version="true"></script>
}

