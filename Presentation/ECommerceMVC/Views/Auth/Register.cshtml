@model ECommerce.Application.Features.Commands.CreateUser.CreateUserCommandRequest
@using ECommerceMVC.Resources
@using Microsoft.Extensions.Localization
@using Localization
@inject IHtmlLocalizer<Translations> Localizer

@{
    ViewData["Title"] = Localizer["Auth.CreateAccount"];
}

<link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true" />

<div class="register-container">
    <div class="register-wrapper">
        <div class="register-card">
            <div class="register-header">
                <h2>@Localizer["Auth.CreateAccount"]</h2>
                <p>@Localizer["Auth.JoinUsAndStartShopping"]</p>
            </div>
            
            <form class="register-form" asp-action="Register" method="post" id="register-form">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label asp-for="NameSurname" class="form-label">
                        <i class="fas fa-user"></i> @Localizer["Auth.FullName"]
                    </label>
                    <input asp-for="NameSurname" type="text" class="form-control" required placeholder="@Localizer["Auth.EnterFullName"]" autocomplete="name">
                    <span class="validation-error" asp-validation-for="NameSurname"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i> @Localizer["Auth.EmailAddress"]
                    </label>
                    <input asp-for="Email" type="email" class="form-control" required placeholder="@Localizer["Auth.EnterEmailAddress"]" autocomplete="email">
                    <span class="validation-error" asp-validation-for="Email"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> @Localizer["Auth.CreateStrongPassword"]
                    </label>
                    <div class="password-input-group">
                        <input asp-for="Password" type="password" class="form-control" required placeholder="@Localizer["Auth.CreateStrongPassword"]" autocomplete="new-password" id="register-password">
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-strength">
                        <div class="strength-bar">
                            <div class="strength-fill" id="strength-fill"></div>
                        </div>
                        <span class="strength-text" id="strength-text">@Localizer["Password.PasswordStrength"]</span>
                    </div>
                    <span class="validation-error" asp-validation-for="Password"></span>
                </div>
                
                <div class="form-group">
                    <label for="confirmPassword" class="form-label">
                        <i class="fas fa-lock"></i> @Localizer["Auth.ConfirmPassword"]
                    </label>
                    <div class="password-input-group">
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required placeholder="@Localizer["Auth.ConfirmYourPassword"]" autocomplete="new-password">
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="validation-error" id="confirmPasswordError"></span>
                </div>
                
                <div class="form-group">
                    <label class="checkbox-container terms-checkbox">
                        <input type="checkbox" id="agreeTerms" required>
                        <span class="checkmark"></span>
                        @Localizer["Auth.AgreeToTerms"] <a href="#" class="link-primary">@Localizer["Auth.TermsOfService"]</a> @Localizer["Auth.Or"] <a href="#" class="link-primary">@Localizer["Auth.PrivacyPolicy"]</a>
                    </label>
                    <span class="validation-error" id="termsError"></span>
                </div>
                
                <button type="submit" class="btn btn-primary btn-register">
                    <i class="fas fa-user-plus"></i> @Localizer["Auth.CreateAccountButton"]
                </button>
                
                <div class="divider">
                    <span>@Localizer["Auth.Or"]</span>
                </div>
                
                <div class="social-login">
                    <a class="btn btn-google" asp-action="ExternalLogin" asp-route-provider="Google">
                        <i class="fab fa-google"></i> @Localizer["Auth.SignUpWithGoogle"]
                    </a>
                </div>
                
                <div class="login-link">
                    <p>@Localizer["Auth.AlreadyHaveAccount"] <a asp-action="Login" class="link-primary">@Localizer["Auth.SignInHere"]</a></p>
                </div>
            </form>
        </div>
        
        <div class="register-illustration">
            <div class="illustration-content">
                <h3>@Localizer["Auth.JoinOurCommunity"]</h3>
                <p>@Localizer["Auth.GetAccessToExclusiveDeals"]</p>
                <div class="benefits">
                    <div class="benefit">
                        <i class="fas fa-gift"></i>
                        <div class="benefit-content">
                            <h4>@Localizer["Auth.ExclusiveDeals"]</h4>
                            <p>@Localizer["Auth.GetAccessToMemberOnlyDiscounts"]</p>
                        </div>
                    </div>
                    <div class="benefit">
                        <i class="fas fa-heart"></i>
                        <div class="benefit-content">
                            <h4>@Localizer["Auth.Wishlist"]</h4>
                            <p>@Localizer["Auth.SaveYourFavoriteItems"]</p>
                        </div>
                    </div>
                    <div class="benefit">
                        <i class="fas fa-truck"></i>
                        <div class="benefit-content">
                            <h4>@Localizer["Auth.FastShipping"]</h4>
                            <p>@Localizer["Auth.FreeShippingOnOrdersOver50"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth-scripts.js" asp-append-version="true"></script>
}