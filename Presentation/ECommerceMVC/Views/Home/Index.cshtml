@using ECommerceMVC.Resources
@using Microsoft.Extensions.Localization
@model HomeViewModel
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/home-styles.css" asp-append-version="true" />

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">@Localizer["Home.DiscoverAmazingProducts"]</h1>
            <p class="hero-subtitle">@Localizer["Home.ShopLatestTrends"]</p>
            <div class="hero-buttons">
                <a href="#categories" class="btn btn-primary btn-lg">@Localizer["Home.ShopNow"]</a>
                <a href="#products" class="btn btn-outline-light btn-lg">@Localizer["Home.ViewProducts"]</a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h4>@Localizer["Auth.FastDelivery"]</h4>
                    <p>@Localizer["Home.FreeShippingOnOrdersOver50"]</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4>@Localizer["Auth.SecureShopping"]</h4>
                    <p>@Localizer["Home.SecurePaymentProcessing"]</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-undo"></i>
                    </div>
                    <h4>@Localizer["Home.DayReturnPolicy"]</h4>
                    <p>@Localizer["Home.DayReturnPolicy"]</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h4>@Localizer["Auth.Support247"]</h4>
                    <p>@Localizer["Home.RoundTheClockCustomerService"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section" id="categories">
    <div class="container">
        <div class="section-header">
            <h2>@Localizer["Home.ShopByCategories"]</h2>
            <p>@Localizer["Home.ExploreWideRange"]</p>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="category-card">
                    <div class="category-image">
                        <img src="~/imgs/img1.jpg" alt="@Localizer["Home.WallArt"]" class="lazy">
                        <div class="category-overlay">
                            <a href="#" class="btn btn-light">@Localizer["Home.ShopNow"]</a>
                        </div>
                    </div>
                    <div class="category-content">
                        <h4>@Localizer["Home.WallArt"]</h4>
                        <p>@Localizer["Home.BeautifulWallDecorations"]</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="category-card">
                    <div class="category-image">
                        <img src="~/imgs/img2.jpg" alt="@Localizer["Home.Posters"]" class="lazy">
                        <div class="category-overlay">
                            <a href="#" class="btn btn-light">@Localizer["Home.ShopNow"]</a>
                        </div>
                    </div>
                    <div class="category-content">
                        <h4>@Localizer["Home.Posters"]</h4>
                        <p>@Localizer["Home.HighQualityPosterPrints"]</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="category-card">
                    <div class="category-image">
                        <img src="~/imgs/img3.jpg" alt="@Localizer["Home.ThankYouCards"]" class="lazy">
                        <div class="category-overlay">
                            <a href="#" class="btn btn-light">@Localizer["Home.ShopNow"]</a>
                        </div>
                    </div>
                    <div class="category-content">
                        <h4>@Localizer["Home.ThankYouCards"]</h4>
                        <p>@Localizer["Home.PersonalizedGreetingCards"]</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="category-card">
                    <div class="category-image">
                        <img src="~/imgs/img4.jpg" alt="@Localizer["Home.GiftCards"]" class="lazy">
                        <div class="category-overlay">
                            <a href="#" class="btn btn-light">@Localizer["Home.ShopNow"]</a>
                        </div>
                    </div>
                    <div class="category-content">
                        <h4>@Localizer["Home.GiftCards"]</h4>
                        <p>@Localizer["Home.PerfectGiftForAnyOccasion"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="products-section" id="products">
    <div class="container">
        <div class="section-header">
            <h2>@Localizer["Home.LatestProducts"]</h2>
            <p>@Localizer["Home.DiscoverOurNewestArrivals"]</p>
        </div>
        <div class="row">
            @await Component.InvokeAsync("ProductComponent")
        </div>
    </div>
</section>

<!-- Sale Section -->
<section class="sale-section">
    <div class="container">
        <div class="section-header">
            <h2>@Localizer["Home.SaleProducts"]</h2>
            <p>@Localizer["Home.LimitedTimeOffers"]</p>
        </div>
        <div class="row">
            @await Component.InvokeAsync("ProductComponent")
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="newsletter-content">
                    <h3>@Localizer["Home.StayUpdated"]</h3>
                    <p>@Localizer["Home.SubscribeToNewsletter"]</p>
                </div>
            </div>
            <div class="col-lg-6">
                <form class="newsletter-form">
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="@Localizer["Home.EnterEmailAddress"]" required>
                        <button class="btn btn-primary" type="submit">@Localizer["Home.Subscribe"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Success Dialogs -->
<div class="success-dialog" id="dialog-basket">
    <div class="dialog-content">
        <i class="fas fa-check-circle"></i>
        <p>@Localizer["Success.ItemAddedToBasket"]</p>
    </div>
</div>

<div class="success-dialog" id="downloaded-dialog">
    <div class="dialog-content">
        <i class="fas fa-download"></i>
        <p>@Localizer["Success.ProductDownloaded"]</p>
    </div>
</div>

<div class="success-dialog" id="dialog-wishlist">
    <div class="dialog-content">
        <i class="fas fa-heart"></i>
        <p>@Localizer["Success.ItemAddedToWishlist"]</p>
    </div>
</div>

@section Scripts {
    <script src="~/js/home-scripts.js" asp-append-version="true"></script>
}